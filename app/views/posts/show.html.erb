<div class="mx-auto md:w-2/3 w-full">
  <%= render @post %>

  <div class="space-x-2 space-y-2 mt-2">
    <%= link_to "Edit this post", edit_post_path(@post), class: "btn" if authenticated? %>
    <%= link_to "Back to posts", posts_path, class: "btn" %>
    <%= button_to "Destroy this post", @post, method: :delete, data: { turbo_confirm: "Are you sure?" }, form_class: "inline-block", class: "btn" if authenticated? %>
  </div>

  <h2 class="font-bold text-2xl mt-8 mb-4">Comments</h2>
  <div id="comments">
    <%= render @post.comments %>
  </div>

  <h2 class="font-bold text-2xl mt-8 mb-4">Add a comment:</h2>
  <%= turbo_frame_tag "new_comment" do %>
    <%= render 'comments/form' %>
  <% end %>
</div>
